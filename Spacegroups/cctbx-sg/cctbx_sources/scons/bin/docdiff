#!/bin/sh

if test $# -eq 0; then
    for f in doc/user/*.in; do
        xml=doc/user/`basename $f .in`.xml
        echo $f:
        python bin/sconsoutput.py $f | diff $DIFFFLAGS $xml -
    done
else
    for a in $*; do
        f=doc/user/$a.in
        xml=doc/user/$a.xml
        echo $f:
        python bin/sconsoutput.py $f | diff $DIFFFLAGS $xml -
    done
fi
