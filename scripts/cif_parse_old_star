#! /bin/sh
#!perl -w # --*- Perl -*--
eval 'exec perl -x $0 ${1+"$@"}'
    if 0;
#------------------------------------------------------------------------------
#$Author$
#$Date$ 
#$Revision$
#$URL$
#------------------------------------------------------------------------------
#*
#  Parse a CIF file using the STAR::Parser.
#**

use strict;
use warnings;
use STAR::Parser;
use COD::ShowStruct;
use COD::SOptions;
use COD::SUsage;

#* USAGE:
#*     $0 input1.cif input*.cif
#*
#* OPTIONS:
#* --help, --usage
#*     Print a short usage message (this message) and exit.
#**
@ARGV = getOptions(
    "--help,--usage"    => sub { usage; exit }
);

@ARGV = ("-") unless @ARGV;

for my $filename (@ARGV) {

    my @data = STAR::Parser->parse($filename);

    for my $dataset (@data) {
        showHash( $dataset );
    }
}
