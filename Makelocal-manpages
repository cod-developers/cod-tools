#--*- Makefile -*--------------------------------------------------------------
#$Author$
#$Revision$
#$Date$
#$URL$
#------------------------------------------------------------------------------

MAN_DIR = doc/man
MAN_FILES = ${CODTOOLS_SCRIPTS:scripts/%=${MAN_DIR}/%.1}

BUGS_EMAIL = cod-bugs@ibt.lt

man: ${MAN_FILES}

all: man

${MAN_DIR}/%.1: scripts/%
	-tools/help2man $< --bugs-email ${BUGS_EMAIL} > $@

clean-man:
	rm -f ${MAN_FILES}

distclean: clean-man
