#!/bin/sh
#!perl -w # --*- Perl -*--
eval 'exec perl -x $0 ${1+"$@"}'
    if 0;
#------------------------------------------------------------------------------
#$Author$
#$Date$
#$Revision$
#$URL$
#------------------------------------------------------------------------------

use strict;
use warnings;
use Module::ScanDeps;

local $\ = "\n";

foreach my $file (@ARGV) {
    print "$file: ",
           join( " ", sort map {"src/lib/perl5/$_"}
                      grep {/^COD/}
                      keys %{ scan_deps( files => [ $file ],
                                         recurse => 1 ) } );
}
