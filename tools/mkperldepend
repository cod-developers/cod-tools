#!/usr/bin/perl

use strict;
use warnings;
use Module::ScanDeps;

local $\ = "\n";

foreach my $file (@ARGV) {
    print "$file: ",
           join( " ", sort map {"src/lib/perl5/$_"}
                      grep {/^COD/}
                      keys scan_deps( files => [ $file ],
                                      recurse => 1) );
}
